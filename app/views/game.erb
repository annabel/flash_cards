<div class="container">
  <h1><%= @deck.deckname %></h1>
  <% if @deck.deckname.downcase.include?('annabel')
       image = 'https://0.gravatar.com/avatar/547d767b841396bb6b7679cd4b4a9cb0?d=https%3A%2F%2Fidenticons.github.com%2F696eaf1cdebe198fd677fdb9dffbb632.png&s=440'
     elsif @deck.deckname.downcase.include?('steve')
       image = 'https://2.gravatar.com/avatar/3fde2c7a380d3d59df18950f6f319e89?d=https%3A%2F%2Fidenticons.github.com%2F3856c3e3b0b7700736226e4130258099.png&s=440'
     elsif @deck.deckname.downcase.include?('alex')
       image = 'https://0.gravatar.com/avatar/033d8bb578303f85b9297acd10ab8320?d=https%3A%2F%2Fidenticons.github.com%2F623a06a56f5f578245ec61ae0db3a165.png&s=440'
     elsif @deck.deckname.downcase.include?('jane')
       image = 'https://1.gravatar.com/avatar/7c1e13bec11dc3186b42820c76e09935?d=https%3A%2F%2Fidenticons.github.com%2Fc3012da025f8c9e87286214eab4373b0.png&s=440'
     else
       image = nil
     end %>
  <img class="person_image_big"src="<%= image %>" />
  <p><%= @message %></p>
  <p class="question_heading">QUESTION: <%= @cards[@count].question %></p>
  <form action="/check_answer" method="post">
  <input type="text" name="answer" style="display:none" value= "<%= @cards[@count].answer %>"><br>
  <input type="text" name="user_answer" id="user_answer"> <br/>
  <input type="text" name="round_id" value= "<%= @round.id %>" style="display:none">
  <input type="text" name="count" style="display:none" value="<%= @count +=1 %>"><br>
  <input class="submit_buttons" type="submit" value="Submit!"/>
  </form>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('#user_answer').focus();
  });
</script>
