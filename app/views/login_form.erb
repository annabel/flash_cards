<div class="container_main">

<h1>Learn some stuff...<br> with people!</h1>
<div class="container_buttons">
  <div class="pictures_right">
  <img class="person_image_medium" src="https://0.gravatar.com/avatar/547d767b841396bb6b7679cd4b4a9cb0?d=https%3A%2F%2Fidenticons.github.com%2F696eaf1cdebe198fd677fdb9dffbb632.png&s=440" />
  <img class="person_image_medium" src="https://2.gravatar.com/avatar/3fde2c7a380d3d59df18950f6f319e89?d=https%3A%2F%2Fidenticons.github.com%2F3856c3e3b0b7700736226e4130258099.png&s=440" />
  </div>

  <div class="pictures_left">
  <img class="person_image_medium" src="https://0.gravatar.com/avatar/033d8bb578303f85b9297acd10ab8320?d=https%3A%2F%2Fidenticons.github.com%2F623a06a56f5f578245ec61ae0db3a165.png&s=440" />
  <img class="person_image_medium" src="https://1.gravatar.com/avatar/7c1e13bec11dc3186b42820c76e09935?d=https%3A%2F%2Fidenticons.github.com%2Fc3012da025f8c9e87286214eab4373b0.png&s=440" />
  </div>
  <h3 id="login_button">Log in to play</h3>
  <h3 id="signup_button">Sign up</h3>
</div><!--ends container_buttons-->


<div class="container_forms"
  <div id="signup_form" class="formLayout">
    <form action="/signup" method="post" autocomplete="off">
      
      <label for="username">Create a username:</label>
      <input type="text" name="username" id="signup_username"/>
      <br/><br>
      <label for="password">Create your password:</label>
      <input type="password" name="password"/>
      <br/><br>
      <input class="submit_buttons" type="submit" value="Submit!"/>
    </form>
  </div>
  <div id="login_form" class="formLayout">
    <form action="/login" method="post">
     
      <label for="username">Username:</label>
      <input type="text" name="username" id="login_username"/>
      <br/><br>
      <label for="password">Password:</label>
      <input type="password" name="password"/>
      <br/><br>
      <input class="submit_buttons" type="submit" value="Submit!" / >
    </form>
  </div>
  <% if @signup_error %>
    <p class="error"><%= @signup_error %></p>
  <% end %>
  <% if @login_error %>
    <p class="error"><%= @login_error %></p>
  <% end %>
</div><!--ends container_forms-->

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#login_button').on('click', function() {
      $('.error').hide();
      $('#login_username').focus();
    });
    $('#signup_button').on('click', function() {
      $('.error').hide();
      $('#signup_username').focus();
    });
  });
</script>
